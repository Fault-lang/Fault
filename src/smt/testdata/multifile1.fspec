spec multifile1;

import ("multifile2.fspec");

def traffic = flow{
    pool: new multifile2.pool,
    in: func{
        if pool.vm1.memory < 75{
            pool.vm1.memory <- 10;
            pool.vm1.cpu <- 5;
        }else if pool.vm2.memory < 75 {
            pool.vm2.memory <- 10;
            pool.vm2.cpu <- 5;
        }else{
            pool.vm3.memory <- 10;
            pool.vm3.cpu <- 5;
        }
    },
    release1: func{
        pool.vm1.memory -> 10;
        pool.vm1.cpu -> 5;
    },
    release2: func{
        pool.vm2.memory -> 10;
        pool.vm2.cpu -> 5;
    },
    release3: func{
        pool.vm3.memory -> 10;
        pool.vm3.cpu -> 5;
    },
};

for 5 run {
    servers = new traffic;
    servers.in | servers.release1 | servers.release2 | servers.release3;
};